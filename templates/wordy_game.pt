<div metal:use-macro="layout">
    <style type="text/css" media="screen" metal:fill-slot="css">
        #wordy_board
        {
            margin: 0;
            padding: 0;
            background-image: url('${request.static_url('dashboard:static/games/wordy/board.png')}');
            background-repeat: no-repeat;
            width: 751px;
            height: 751px;
        }
        
        #wordy_board td
        {
            width: 50px;
            height: 50px;
            margin: 0;
            padding: 0;
            border: 0px solid #000;
        }
        
        #wordy_board td div,
        #wordy_board .a,
        #wordy_board .b,
        #wordy_board .c,
        #wordy_board .d,
        #wordy_board .e,
        #wordy_board .f,
        #wordy_board .g,
        #wordy_board .h,
        #wordy_board .i,
        #wordy_board .j,
        #wordy_board .k,
        #wordy_board .l,
        #wordy_board .m,
        #wordy_board .n,
        #wordy_board .o,
        #wordy_board .p,
        #wordy_board .q,
        #wordy_board .r,
        #wordy_board .s,
        #wordy_board .t,
        #wordy_board .u,
        #wordy_board .v,
        #wordy_board .w,
        #wordy_board .x,
        #wordy_board .y,
        #wordy_board .z
        {
            width: 50px;
            height: 50px;
            background-image:url('${request.static_url('dashboard:static/games/wordy/letters.png')}');
            background-position: 50px 50px;
            background-repeat: no-repeat;
            cursor: pointer;
        }
        
        #wordy_board .a {background-position: -7px -7px;}
        #wordy_board .b {background-position: -72px -7px;}
        #wordy_board .c {background-position: -137px -7px;}
        #wordy_board .d {background-position: -202px -7px;}
        #wordy_board .e {background-position: -267px -7px;}
        #wordy_board .f {background-position: -332px -7px;}
        #wordy_board .g {background-position: -397px -7px;}
        #wordy_board .h {background-position: -462px -7px;}
        #wordy_board .i {background-position: -527px -7px;}
        #wordy_board .j {background-position: -592px -7px;}
        #wordy_board .k {background-position: -657px -7px;}
        #wordy_board .l {background-position: -722px -7px;}
        #wordy_board .m {background-position: -787px -7px;}
        #wordy_board .n {background-position: -852px -7px;}
        #wordy_board .o {background-position: -917px -7px;}
        #wordy_board .p {background-position: -982px -7px;}
        #wordy_board .q {background-position: -1047px -7px;}
        #wordy_board .r {background-position: -1112px -7px;}
        #wordy_board .s {background-position: -1177px -7px;}
        #wordy_board .t {background-position: -1242px -7px;}
        #wordy_board .u {background-position: -1307px -7px;}
        #wordy_board .v {background-position: -1372px -7px;}
        #wordy_board .w {background-position: -1437px -7px;}
        #wordy_board .x {background-position: -1502px -7px;}
        #wordy_board .y {background-position: -1567px -7px;}
        #wordy_board .z {background-position: -1632px -7px;}
    </style>
    
    <div metal:fill-slot="content">
        <div id="wordy_board">
            <table cellpadding="0" cellspacing="0">
                <tr tal:repeat="row the_board">
                    <td tal:repeat="tile row">
                        <div tal:condition="tile == ' '" class="letter">&nbsp;</div>
                        <div tal:condition="tile != ' '" class="${tile}">&nbsp;</div>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>