<div metal:use-macro="layout">
    <style type="text/css" media="screen" metal:fill-slot="css">
        #wordy_board
        {
            margin: 0;
            padding: 0;
            background-image: url('${request.static_url('dashboard:static/games/wordy/board.png')}');
            background-repeat: no-repeat;
            width: 751px;
            height: 751px;
        }
        
        #wordy_board td
        {
            width: 50px;
            height: 50px;
            margin: 0;
            padding: 0;
        }
        
        .letter,
        .la,
        .lb,
        .lc,
        .ld,
        .le,
        .lf,
        .lg,
        .lh,
        .li,
        .lj,
        .lk,
        .ll,
        .lm,
        .ln,
        .lo,
        .lp,
        .lq,
        .lr,
        .ls,
        .lt,
        .lu,
        .lv,
        .lw,
        .lx,
        .ly,
        .lz
